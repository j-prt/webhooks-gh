{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    //   tells the compiler to put the compiled code into the dist folder.
    "outDir": "dist",
    // informs TypeScript to compile every .ts file located in the server folder.
    "rootDir": "server",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noImplicitAny": true,
    "sourceMap": false
  },
  // tells the compiler to include files that are in the src directory and sub-directory.
  "include": ["server/*"],
  // will exclude the files or folders passed in the array during compile-time.
  "exclude": ["node_modules", ".vscode"]
}
